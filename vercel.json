{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/galeria",
      "destination": "/galeria"
    },
    {
      "source": "/nft/:tokenId",
      "destination": "/nft/:tokenId"
    },
    {
      "source": "/trazabilidad/:tokenId",
      "destination": "/trazabilidad/:tokenId"
    }
  ]
}